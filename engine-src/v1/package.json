{
  "name": "@akashic/akashic-sandbox-v1",
  "version": "0.0.1",
  "description": "To build akashic-sandbox to run the contents of akashic-engine v1",
  "scripts": {
    "build": "npm run build:browserify && npm run copy:v1",
    "build:browserify": "browserify --require ./node_modules/@akashic/akashic-engine/lib/main.node.js:@akashic/akashic-engine --outfile ../../js/v1/akashic-engine.js",
    "copy:v1": "cpx js/**/*.js ../../js/v1 && cpx external/**/*.js ../../js/v1",
    "update-external": "node ../../build/copyfiles.js v1"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "devDependencies": {
    "@akashic/akashic-engine": "~1.12.8",
    "browserify": "^13.0.0",
    "cpx": "^1.5.0"
  },
  "optionalDependencies": {
    "@akashic/game-driver": "~0.11.10",
    "@akashic/game-storage": "0.0.6",
    "@akashic/pdi-browser": "~0.10.7"
  },
  "private": true
}
