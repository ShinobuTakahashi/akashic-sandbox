{
  "name": "@akashic/akashic-sandbox-v2",
  "version": "0.0.1",
  "description": "To build akashic-sandbox to run the contents of akashic-engine v2",
  "scripts": {
    "build": "npm run build:v2 && npm run copy:common",
    "build:v2": "npm run build:browserify && npm run copy:v2",
    "build:browserify": "browserify --require ./node_modules/@akashic/akashic-engine/lib/main.node.js:@akashic/akashic-engine --outfile ../../js/v2/akashic-engine.js",
    "copy:v2": "cpx js/**/*.js ../../js/v2 && cpx external/**/*.js ../../js/v2",
    "copy:common": "cpx ../common/js/**/*.js ../../js && cpx ../common/external/**/*.js ../../js",
    "update-external": "node ../../build/copyfiles.js"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "devDependencies": {
    "@akashic/akashic-engine": "~2.1.1",
    "browserify": "^13.0.0",
    "cpx": "^1.5.0"
  },
  "optionalDependencies": {
    "@akashic/game-driver": "~1.1.1",
    "@akashic/game-storage": "0.0.6",
    "@akashic/pdi-browser": "~1.2.1"
  },
  "private": true
}
